<script>
export default {
    config: {
        navigationBarTitleText: '方寸驿站',
        navigationBarTextStyle: 'black',
        enablePullDownRefresh: true
    },
    data: {
        NAV_HEIGHT:wx.STATUS_BAR_HEIGHT+wx.DEFAULT_HEADER_HEIGHT+'px',
        DEFAULT_HEADER_HEIGHT: wx.DEFAULT_HEADER_HEIGHT,
        banner: [
            {src: 'http://file.taoyuantoday.com/213/20190109/cd0bd4b383fb190dbafddc93edcc562d.jpg'},
            {src: 'http://file.taoyuantoday.com/213/20190110/db6e52bb996b8e03da9972f0560bd85c.jpg'},
            {src: 'http://file.taoyuantoday.com/213/20190111/f7e9684f2a50926daa2361c19173e582.png'},
        ],
        style: 1,
        swiperCurrent: 0,
        current: 0,
        showBadge: true,
        isHideLoadMore: false,
        socials:[],             // 社交消息列表
        activities: [],         // 最新活动列表
        uid: '',                // 用户标识
        userInfo: {},           // 用户基本信息
    },
    onLoad(options) {
        // 自动登录并返回登录信息
        this.autoLogin(this)
        // 获取社交数据
        this.getSocials(1)
        // 获取活动数据
        this.getActivities(1)
        wx.showShareMenu({
            withShareTicket: true
        })
    },
    // 自动登录
    autoLogin (thisobj) {
        wx.login({
            success(res) {
                if (res.code) {
                    //发起网络请求
                    wx.request({
                        url: 'https://wx.taoyuantoday.com/mini.Index/wxQuickLogin.html',
                        data: {
                            code: res.code
                        },
                        header: {
                            'content-type': 'application/json' // 默认值
                        },
                        success(res) {
                            if (res.data) {
                                thisobj.setData({
                                    uid: res.data
                                })
                                // 根据用户标识获取用户基本信息
                                thisobj.getUserInfoById(res.data)
                            }
                        }
                    })
                } else {
                    console.log('登录失败，请检查网络设置！' + res.errMsg)
                }
            }
        })
    },
    // 获取用户基本信息
    bindGetUserInfo(e) {
        var that = this;
        // 判断是否同意授权
        if (e.detail.userInfo == undefined) {
            wx.showModal({
                title: '温馨提示',
                content: '请先允许授权再发布！',
                showCancel: false,
                confirmColor: '#FFD100',
                confirmText: '我知道啦',
                success(res) {
                    if (res.confirm) {
                        console.log('用户已确认看到提示！')
                    }
                }
            })
        } else {
            var user = {
                avatar: e.detail.userInfo.avatarUrl,
                username: e.detail.userInfo.nickName,
            }
            that.setData({
                userInfo: user
            })
            that.updateUser(e.detail.userInfo, that.data.uid)
        }
    },
    // 用户开发信息记录
    updateUser: function (userInfo, uid) {
        wx.request({
            url: 'https://wx.taoyuantoday.com/mini.Wesocial/updateUser.html',
            data: {
                userInfo: userInfo,
                uid: uid
            },
            header: {
                'content-type': 'application/json' // 默认值
            },
            success(res) {
                console.log(res)
            }
        })
    },
    // 获取用户基本信息
    getUserInfoById: function (uid) {
        var that = this
        wx.request({
            url: 'https://wx.taoyuantoday.com/mini.Wesocial/getUserInfoById.html',
            data: {
                uid: uid
            },
            header: {
                'content-type': 'application/json' // 默认值
            },
            success(res) {
                if (res.data) {
                    that.setData({
                        userInfo: res.data
                    })
                }
            }
        })
    },
    //下拉刷新
    onPullDownRefresh:function() {
        wx.showNavigationBarLoading() //在标题栏中显示加载
        // 自动登录并返回登录信息
        this.autoLogin(this)
        this.getSocials(1)
        this.getActivities(1)
        // 模拟加载
        setTimeout(function() {
            // complete
            wx.hideNavigationBarLoading() //完成停止加载
            wx.stopPullDownRefresh() //停止下拉刷新
        }, 1500);
    },
    // 查看测试详情
    navigateTo: function (option) {
        let type = option.currentTarget.dataset.type
        if(type == undefined) {
            wx.showAlert({
                content:'该模块正在拼命开发中，很快就能开放了~',
                confirmText:'我知道了',
                success:(res) =>{
                    console.log(res)
                }
            })
        } else {
            wx.navigateTo({
                url: '../'+type+'/index'
            })
        }  
    },
    // 查看活动详情
    getActInfo: function (option) {
        let activityid = option.currentTarget.dataset.id
        wx.navigateTo({
            url: '../activity/info?activityid='+activityid
        })
    },
    // 活动列表
    getActivities: function (status) {
        var that = this;
        wx.request({
            url: 'https://wx.taoyuantoday.com/mini.Weactivity/index.html',
            data: {
                status: status,
            },
            header: {
                'content-type': 'application/json' // 默认值
            },
            success(res) {
                if (res.data) {
                    that.setData({
                        activities: res.data
                    })
                }
            }
        })
    },
    // 社交列表
    getSocials: function (status) {
        var that = this;
        wx.request({
            url: 'https://wx.taoyuantoday.com/mini.Wesocial/index.html',
            data: {
                status: status,
            },
            header: {
                'content-type': 'application/json' // 默认值
            },
            success(res) {
                if (res.data) {
                    that.setData({
                        socials: res.data
                    })
                }
            }
        })
    },
    // 客服消息
    handleContact(e) {
        console.log(e.path)
        console.log(e.query)
    }
}
</script>

